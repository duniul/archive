<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_black">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/header_search"
        android:background="@color/button_bg_gold"
        android:paddingTop="15dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:paddingBottom="15dp"
        android:minHeight="70dp"
        android:longClickable="false"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:text="Ändra dina preferenser"
            android:background="@color/button_bg_gray"
            android:layout_gravity="center_horizontal"
            android:id="@+id/button_filter"

            android:textStyle="bold"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/field_search_area"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:background="@color/input_field_bg"
                android:inputType="textCapWords"
                android:singleLine="true"
                android:textColor="@color/input_field_text"
                android:textColorHint="@color/input_field_hint"
                android:layout_weight="2"
                android:selectAllOnFocus="true"
                android:hint="Ort"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:layout_marginRight="2dp" />

            <EditText
                android:id="@+id/field_search_city"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:background="@color/input_field_bg"
                android:inputType="textCapWords"
                android:singleLine="true"
                android:textColor="@color/input_field_text"
                android:textColorHint="@color/input_field_hint"
                android:layout_weight="2"
                android:selectAllOnFocus="true"
                android:hint="Stad"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:layout_marginLeft="2dp" />


            <Button
                android:layout_width="70dp"
                android:layout_height="fill_parent"
                android:text="SÖK"
                android:background="@color/button_bg_gray"
                android:id="@+id/button_search"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>

    <ListView
        android:id="@+id/listview_found_people"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="#00fffff1"
        android:dividerHeight="3dp"
        android:listSelector="@drawable/list_row_selector"
        android:layout_weight="2"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp" />

</LinearLayout>