<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="250dp"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:scaleType="center"
        android:background="@color/button_bg_gold"
        android:text="Byt bild"
        android:textColor="@color/button_text_white"
        android:gravity="center"
        android:textSize="16dp"
        android:contentDescription="@string/app_name"
        android:textStyle="bold"
        android:id="@+id/photo_dialog_title"
        android:layout_marginBottom="5dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/chosen_photo"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/default_profile_pic"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Rotera vänster"
                android:id="@+id/button_rotate_left"
                android:textSize="11dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Rotera höger"
                android:id="@+id/button_rotate_right"
                android:textSize="11dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Spegelvänd"
                android:id="@+id/button_mirror"
                android:textSize="11dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Ta en ny bild"
            android:id="@+id/button_take_photo"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textSize="12dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Välj från galleri"
            android:id="@+id/button_pick_from_gallery"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textSize="12dp" />
    </LinearLayout>

</LinearLayout>